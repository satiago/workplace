import sys
import re
from util import *

def main():
    outfile = open("text_out.txt", 'w+')
    outfile.write('<html><head><tile>...</title></head><body>')
    
    infile = open("text_input.txt", "r")
    
    title = True
    
    for block in blocks(infile):
        
        if title:
            outfile.write("<hl>")
            outfile.write(block)
            outfile.write("</hl>")
            title = False
            
        else:
            outfile.write("<p>")
            outfile.write(block)
            outfile.write("</p>")
            outfile.write("</body><html>")
            
    outfile.close()
    infile.close()

if __name__ == "__main__":
    main()
    