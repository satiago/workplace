import sys
import re
import util
# from util import *

def main():
    outfile = open("text_out.html", 'w+')
    outfile.write('<html><head><title>...</title></head><body>')
    
    infile = open("text_input.txt", "r")
    
    title = True
    
    for block in util.blocks(infile):
        
        if title:
            outfile.write("<h1>")
            outfile.write(block)
            outfile.write("</h1>")
            title = False
            
        else:
            outfile.write("<p>")
            outfile.write(block)
            outfile.write("</p>")
            outfile.write("</body><html>")
            
    outfile.close()
    infile.close()

if __name__ == "__main__":
    main()
    