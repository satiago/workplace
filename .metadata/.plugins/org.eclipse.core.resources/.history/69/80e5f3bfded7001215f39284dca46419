import cmath
import math
import sys

if __name__ == '__main__':
    print("ax\N{SUPERSCRIPT TWO} + bx + c = 0")
    
    


def get_float(msg, allow_zero):
    x = None
    while x is None:
        try:
            x = float(input(msg))
            if not allow_zero and abs(x) < sys.float_info.epsilon:
                print("zero is not allowed")
                x = None
        except ValueError as err:
            print(err)
    return x
                